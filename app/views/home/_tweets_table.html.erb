<table class="table">
  <thead>
    <tr>
      <th>Tweets</th>
    </tr>
  </thead>
  <tbody>
  	<% tweets.each do |tweet| %>
    <tr>
    	<% if tweet.text.length < 70 %>
      	<td class="danger"><%= tweet.text %></td>
      <% else %>
      	<td class="success"><%= tweet.text %></td>
      <% end %>	
    </tr>
    <% end %>
  </tbody>
</table>